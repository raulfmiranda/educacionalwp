<Page
    x:Class="Educacional.Cadastro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Educacional"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Black"
    mc:Ignorable="d">

    <StackPanel Padding="25 50 25 0" Background="{StaticResource screen_background}">
        <TextBlock Text="Cadastro" Margin="0 0 0 10" HorizontalAlignment="Center" Style="{StaticResource TextBlockTitle}"/>
        <TextBlock Text="Entre com as informações abaixo." Margin="0 0 0 25" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <TextBox PlaceholderText="Nome" Margin="0 0 0 10" Style="{StaticResource TextBoxStyle}"/>
        <TextBox PlaceholderText="E-mail" Margin="0 0 0 10" Style="{StaticResource TextBoxStyle}"/>
        <TextBox PlaceholderText="Login" Margin="0 0 0 10" Style="{StaticResource TextBoxStyle}"/>
        <TextBox PlaceholderText="Senha" Margin="0 0 0 50" Style="{StaticResource TextBoxStyle}"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,7,50" HorizontalAlignment="Center">
            <Button x:ConnectionId='1' x:Name="btCancelarCadastro" Content="Cancelar" Style="{StaticResource ButtonSecondary}"                                 />
            <Button x:ConnectionId='2' x:Name="btCadastrarUsuario" Content="Cadastrar"  Style="{StaticResource ButtonPrimary}"/>
        </StackPanel>
    </StackPanel>
</Page>

